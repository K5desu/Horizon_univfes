generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
model user {
  id      String    @id @default(uuid())
  mail    String    @unique
  instagram String?
  twitter String?
  github  String?
  name    String
  comment String?
  owner   Boolean
  image   String?   // ユーザー画像URLを格納するオプショナルフィールド
  articles article[]
  likes   Like[]
}

model article {
  id       String   @id @default(uuid())
  title    String  
  content  String  
  tags     String  
  campas   Boolean     
  img      String
  url      String
  userid   String  
  user     user     @relation(fields: [userid], references: [id])
  likes    Like[]
}

// いいね機能を表すモデル
model Like {
  id        String   @id @default(uuid())
  userId    String
  articleId String
  user      user     @relation(fields: [userId], references: [id])
  article   article  @relation(fields: [articleId], references: [id])

  @@unique([userId, articleId]) // 同じユーザーが同じ記事に複数回いいねを付けることを防ぐ
}